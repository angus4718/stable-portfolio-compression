{
  "description": "Configuration for synthetic market data generation",
  
  "simulation_parameters": {
    "n_sectors": {
      "value": 10,
      "description": "Number of asset sectors to simulate",
      "type": "integer",
      "min": 1,
      "max": 20
    },
    "assets_per_sector": {
      "value": 20,
      "description": "Initial number of assets per sector",
      "type": "integer",
      "min": 1,
      "max": 100
    },
    "n_months": {
      "value": 180,
      "description": "Number of months to simulate (60 = 5 years)",
      "type": "integer",
      "min": 1,
      "max": 600
    },
    "removal_rate": {
      "value": 0.01,
      "description": "Fraction of assets removed each month (0.05 = 5%)",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "addition_rate": {
      "value": 0.01,
      "description": "Fraction of new assets added each month (0.05 = 5%)",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "random_seed": {
      "value": 42,
      "description": "Random seed for reproducibility. Use different values for different simulations.",
      "type": "integer",
      "min": 0,
      "max": 2147483647
    }
    ,
    "index_size": {
      "value": 50,
      "description": "Fixed number of constituents in the market-cap weighted index (k).",
      "type": "integer",
      "min": 1
    }
  },

  "sector_volatility": {
    "description": "Monthly volatility for each sector (annualized / sqrt(12) for monthly equiv.)",
    "Technology": {
      "value": 0.25,
      "description": "Technology sector volatility",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Healthcare": {
      "value": 0.20,
      "description": "Healthcare sector volatility",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Finance": {
      "value": 0.22,
      "description": "Finance sector volatility",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Energy": {
      "value": 0.30,
      "description": "Energy sector volatility",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Consumer": {
      "value": 0.18,
      "description": "Consumer sector volatility",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    }
  },

  "sector_correlation": {
    "description": "Within-sector correlation coefficients (higher = more correlated)",
    "Technology": {
      "value": 0.60,
      "description": "Within-sector correlation for Technology",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Healthcare": {
      "value": 0.50,
      "description": "Within-sector correlation for Healthcare",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Finance": {
      "value": 0.70,
      "description": "Within-sector correlation for Finance",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Energy": {
      "value": 0.65,
      "description": "Within-sector correlation for Energy",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    },
    "Consumer": {
      "value": 0.55,
      "description": "Within-sector correlation for Consumer",
      "type": "float",
      "min": 0.0,
      "max": 1.0
    }
  },

  "output_directory": {
    "value": "synthetic_data",
    "description": "Directory where CSV files will be saved",
    "type": "string"
  },

  "output_files": {
    "prices": {
      "filename": "prices_monthly.csv",
      "description": "Monthly prices for all tickers (rows: dates, cols: tickers)"
    },
    "weights": {
      "filename": "market_index_weights.csv",
      "description": "Market cap weights for all tickers (normalized per month)"
    },
    "market_caps": {
      "filename": "market_cap_values.csv",
      "description": "Market cap values for all tickers in dollars"
    }
  },

  "notes": {
    "total_initial_assets": "n_sectors * assets_per_sector",
    "sector_names": ["Technology", "Healthcare", "Finance", "Energy", "Consumer"],
    "price_initialization": "All assets start at price = $100",
    "shares_outstanding": "Randomly drawn from Uniform(10, 500) per asset",
    "monthly_drift": "Randomly drawn from Uniform(0.5%, 1.5%)",
    "nan_handling": "Assets that don't exist in a month are represented as NaN",
    "membership_rule": "Top X assets by market cap are included in index each month"
  }
}
